<div class="row">
  <div class="col-md-2">
    <h5> Hi <%= current_user.email %> </h5>
    <h4> Rooms </h4>
    <%= render partial: "layouts/new_room_form" %>
    <%= turbo_stream_from "rooms" %>

    <div id="rooms">
      <%= render @rooms %>
    </div>
  </div>

  <div class="col-md-10 bg-dark">
    <% if @single_room %>
    <h4 class="text-center"> <%= @single_room.name %></h4>
    <% end %>
  </div>
</div>
